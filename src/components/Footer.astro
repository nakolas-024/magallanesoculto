---
import { config } from '../config';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-info">
      <p class="copyright">
        Sitio creado por <a href="https://mollyinc.cl" target="_blank" rel="noopener">MollyInc.cl</a> Â© {currentYear} Pueblo. Todos los derechos reservados.
      </p>
    </div>
    
    <div class="social-links">
      {/* --- ICONOS SOCIALES ACTUALIZADOS --- */}
      {config.social.facebook && (
        <a href={config.social.facebook} target="_blank" rel="noopener" aria-label="Facebook" class="social-link">
          {/* Icono de Facebook SVG */}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
